<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/button_backgr"
    android:elevation="8dp"
    tools:context=".SoloSpin">

    <!-- Lucky Name Message -->
    <TextView
        android:id="@+id/lucky_name_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And the lucky one is..."
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Lucky Name Text -->
    <TextView
        android:id="@+id/lucky_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Name]"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lucky_name_message" />

    <!-- Buttons for "Stay" and "Remove" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lucky_name">

        <!-- Stay Button -->
        <Button
            android:id="@+id/stay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay"
            android:backgroundTint="@color/green"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginEnd="10dp"/>

        <!-- Remove Button -->
        <Button
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
